# Application
ENVIRONMENT=development
DEBUG=true
APP_NAME=OrderOctopus
HOST=0.0.0.0
PORT=8000

# Database (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# Facebook Messenger
FACEBOOK_PAGE_ACCESS_TOKEN=your-page-access-token
FACEBOOK_VERIFY_TOKEN=your-custom-verify-token
FACEBOOK_APP_SECRET=your-app-secret

# LLM API (Choose one or both)
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key
LLM_PROVIDER=anthropic  # Options: anthropic, openai

# Stripe
STRIPE_SECRET_KEY=sk_test_your-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Application Settings
DEFAULT_VENUE_LANGUAGE=en
MAX_FREE_MENU_PARSES=3
DEFAULT_FREE_CREDITS=25
CREDITS_PER_ORDER=1.0
CREDITS_PER_REJECTION=0.5
CREDITS_PER_MENU_IMPORT=15

# Logging
LOG_LEVEL=INFO
